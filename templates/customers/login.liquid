<div class="section section--customer">
  <div class="container container--narrow">
    <h1 class="page-title">Login</h1>
    
    {% form 'customer_login' %}
      {{ form.errors | default_errors }}
      
      <div class="form-group">
        <label for="customer-email">Email</label>
        <input type="email" name="customer[email]" id="customer-email" required>
      </div>
      
      <div class="form-group">
        <label for="customer-password">Password</label>
        <input type="password" name="customer[password]" id="customer-password" required>
      </div>
      
      <button type="submit" class="button button--primary">Sign in</button>
      
      <p>
        <a href="{{ routes.account_register_url }}">Create account</a>
        |
        <a href="{{ routes.account_recover_url }}">Forgot password?</a>
      </p>
    {% endform %}
  </div>
</div>
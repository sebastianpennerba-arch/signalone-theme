<div class="section section--collections-list">
  <div class="container">
    <h1 class="page-title">Collections</h1>
    
    <div class="collections-grid">
      {% for collection in collections %}
        <div class="collection-card">
          <a href="{{ collection.url }}">
            {% if collection.featured_image %}
              <img 
                src="{{ collection.featured_image | image_url: width: 600 }}" 
                alt="{{ collection.featured_image.alt | escape }}"
              >
            {% endif %}
            <h2 class="collection-card__title">{{ collection.title }}</h2>
            <p class="collection-card__count">{{ collection.products_count }} products</p>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Collections List",
  "settings": []
}
{% endschema %}
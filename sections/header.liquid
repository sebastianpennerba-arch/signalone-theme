{% comment %} Header - Minimal System Navigation {% endcomment %}

<header class="header" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="header__inner">
      <div class="header__logo">
        {% if section.settings.logo != blank %}
          <img src="{{ section.settings.logo | image_url: width: 180 }}" alt="{{ shop.name }}" width="180">
        {% else %}
          <span class="header__wordmark">{{ shop.name }}</span>
        {% endif %}
      </div>
      
      <nav class="header__nav">
        <a href="/pages/prinzip" class="header__nav-link">Prinzip</a>
        <a href="/pages/zugang" class="header__nav-link header__nav-link--accent">Zugang</a>
      </nav>
    </div>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 100;
    background: rgba(10, 10, 10, 0.9);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--color-border);
  }
  
  .header__inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--space-md) 0;
  }
  
  .header__wordmark {
    font-size: 18px;
    font-weight: 500;
    letter-spacing: -0.01em;
  }
  
  .header__nav {
    display: flex;
    gap: var(--space-lg);
    align-items: center;
  }
  
  .header__nav-link {
    font-size: 14px;
    color: var(--color-text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .header__nav-link--accent {
    color: var(--color-accent);
  }
  
  body { padding-top: 80px; }
  
  @media (max-width: 768px) {
    .header__nav { gap: var(--space-md); }
    .header__nav-link { font-size: 12px; }
  }
</style>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    }
  ]
}
{% endschema %}
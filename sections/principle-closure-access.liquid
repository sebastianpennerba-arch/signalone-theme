<div class="section section--closure">
  <div class="container container--narrow">
    <div class="closure-content">
      <h2 class="closure-title">{{ section.settings.heading }}</h2>
      <p class="closure-text">{{ section.settings.text }}</p>
      <a href="{{ section.settings.link_url }}" class="button button--primary">
        {{ section.settings.button_text }}
      </a>
    </div>
  </div>
</div>

<style>
  .section--closure {
    padding: 8rem 0;
    background: var(--color-base);
  }
  
  .closure-content {
    text-align: center;
  }
  
  .closure-title {
    font-size: var(--font-size-2xl);
    font-weight: 500;
    margin-bottom: 1.5rem;
  }
  
  .closure-text {
    font-size: var(--font-size-lg);
    color: var(--color-text-subtle);
    margin-bottom: 2.5rem;
    line-height: 1.6;
  }
</style>


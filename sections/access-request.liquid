<div class="section section--access">
  <div class="container container--narrow">
    <div class="access-card">
      <header class="access-header">
        <h2 class="access-title">{{ section.settings.heading }}</h2>
        {% if section.settings.description != blank %}
          <p class="access-description">{{ section.settings.description }}</p>
        {% endif %}
      </header>
      
      {% form 'contact', class: 'access-form' %}
        {% if form.posted_successfully? %}
          <div class="form-success">
            <p>{{ section.settings.success_message }}</p>
          </div>
        {% endif %}
        
        {% if form.errors %}
          <div class="form-errors">
            <p>{{ form.errors | default_errors }}</p>
          </div>
        {% endif %}
        
        <div class="form-group">
          <label for="contact-email" class="form-label">E-Mail</label>
          <input 
            type="email" 
            id="contact-email" 
            name="contact[email]" 
            class="form-input"
            required
          >
        </div>
        
        <div class="form-group">
          <label for="contact-rolle" class="form-label">{{ section.settings.rolle_label }}</label>
          <input 
            type="text" 
            id="contact-rolle" 
            name="contact[rolle]" 
            class="form-input"
            placeholder="{{ section.settings.rolle_placeholder }}"
            required
          >
        </div>
        
        <div class="form-group">
          <label for="contact-message" class="form-label">{{ section.settings.message_label }}</label>
          <textarea 
            id="contact-message" 
            name="contact[body]" 
            class="form-textarea"
            rows="4"
            placeholder="{{ section.settings.message_placeholder }}"
            required
          ></textarea>
        </div>
        
        <button type="submit" class="button button--primary button--full">
          {{ section.settings.button_text }}
        </button>
        
        {% if section.settings.microcopy != blank %}
          <p class="form-microcopy">{{ section.settings.microcopy }}</p>
        {% endif %}
      {% endform %}
    </div>
  </div>
</div>

<style>
  .section--access {
    padding: 8rem 0;
    background: var(--color-base);
  }
  
  .access-card {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    padding: 3rem;
    max-width: 36rem;
    margin: 0 auto;
  }
  
  .access-header {
    margin-bottom: 2.5rem;
    text-align: center;
  }
  
  .access-title {
    font-size: var(--font-size-2xl);
    font-weight: 500;
    margin-bottom: 1rem;
  }
  
  .access-description {
    color: var(--color-text-subtle);
    line-height: 1.6;
  }
  
  .form-group {
    margin-bottom: 1.5rem;
  }
  
  .form-label {
    display: block;
    margin-bottom: 0.5rem;
    font-size: var(--font-size-sm);
    font-weight: 500;
    color: var(--color-text);
  }
  
  .form-input,
  .form-textarea {
    width: 100%;
    padding: 0.875rem 1rem;
    background: var(--color-base);
    border: 1px solid var(--color-border);
    color: var(--color-text);
    font-size: var(--font-size-base);
    font-family: inherit;
    transition: border-color 0.2s;
  }
  
  .form-input:focus,
  .form-textarea:focus {
    outline: none;
    border-color: var(--color-accent);
  }
  
  .form-textarea {
    resize: vertical;
    min-height: 6rem;
  }
  
  .form-microcopy {
    margin-top: 1rem;
    font-size: var(--font-size-sm);
    color: var(--color-text-subtle);
    text-align: center;
    line-height: 1.5;
  }
  
  .form-success {
    padding: 1rem;
    background: rgba(255, 138, 0, 0.1);
    border: 1px solid var(--color-accent);
    color: var(--color-accent);
    margin-bottom: 1.5rem;
    text-align: center;
  }
  
  .form-errors {
    padding: 1rem;
    background: rgba(255, 59, 48, 0.1);
    border: 1px solid #ff3b30;
    color: #ff3b30;
    margin-bottom: 1.5rem;
  }
  
  @media (max-width: 768px) {
    .access-card {
      padding: 2rem 1.5rem;
    }
  }
</style>

{% schema %}
{
  "name": "Access Request",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Überschrift",
      "default": "Zugang anfragen"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Beschreibung",
      "default": "Wir prüfen jede Anfrage manuell. Sie erhalten innerhalb von 48 Stunden eine Antwort."
    },
    {
      "type": "text",
      "id": "rolle_label",
      "label": "Rolle Label",
      "default": "Ihre Rolle"
    },
    {
      "type": "text",
      "id": "rolle_placeholder",
      "label": "Rolle Placeholder",
      "default": "z.B. Media Buyer, Agenturinhaber"
    },
    {
      "type": "text",
      "id": "message_label",
      "label": "Nachricht Label",
      "default": "Warum SignalOne?"
    },
    {
      "type": "text",
      "id": "message_placeholder",
      "label": "Nachricht Placeholder",
      "default": "Beschreiben Sie kurz Ihren Use Case"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Anfrage senden"
    },
    {
      "type": "text",
      "id": "microcopy",
      "label": "Microcopy",
      "default": "Keine automatische Freischaltung. Manuelle Prüfung."
    },
    {
      "type": "text",
      "id": "success_message",
      "label": "Erfolgs-Nachricht",
      "default": "Anfrage erhalten. Sie erhalten in Kürze eine Antwort."
    }
  ],
  "presets": [
    {
      "name": "Access Request"
    }
  ]
}
{% endschema %}